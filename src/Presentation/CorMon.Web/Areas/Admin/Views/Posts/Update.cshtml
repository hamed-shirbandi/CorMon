@model PostInput

@{
    ViewBag.Title = "ویرایش مطلب";
}

@Html.Partial("_SaveForm", Model)


@section Scripts {

    <script src="~/scripts/public/vendors/ckeditor/ckeditor.js"></script>

    <script>
        jQuery.validator.setDefaults({ ignore: ":hidden:not(textarea)" });

        $(document).ready(function () {
            //Initial CK EDITOR
            //CKEDITOR.replace('Content');

            CKEDITOR.replace('Content', {
                customConfig: 'config.js'
            });


              // Initial tag manager
            $("#tags-input").tagsManager({
                prefilled: [@Html.Raw(string.Join(",",Model.TagsPrefill.Select(x=>"'"+ x +"'")))],
                tagsContainer: "#tag-container",
                hiddenTagListName: 'tags',
            });

    });

    </script>
    <script src="~/scripts/admin/pages/cormon.page.post.js"></script>

}
